<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/kato"
        android:alpha="0.58"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="260dp"
            android:gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/jewel"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sky"
                    android:textSize="40dp"
                    android:textColor="#79AED6"
                    android:textStyle="bold"
                    android:id="@+id/newsky"
                    android:fontFamily="@font/monoton"/>

                <!--<TextView-->
                <!--android:id="@+id/sky"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="@font/monoton"-->
                <!--android:text="Sky"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="#3591C3"-->
                <!--android:textSize="50dp" />-->

                <TextView
                    android:id="@+id/cha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textStyle="bold"
                    android:fontFamily="@font/monoton"
                    android:textColor="#FFFF"
                    android:textSize="40dp" />
                <!--<TextView-->
                <!--android:id="@+id/chate"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Chat"-->
                <!--android:textColor="#355DC3"-->
                <!--android:textSize="50dp" />-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/origin"
            android:layout_marginTop="-15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="#43FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                >


                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:editable="false"
                    android:inputType="none"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_launcher_foreground"
                    android:backgroundTint="@android:color/transparent"/>



                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#25292C"
                    android:hint="Username"
                    android:id="@+id/username"
                    android:padding="11.5dp"
                    android:textColorHint="@android:color/white"
                    android:textSize="18dp" />


            </android.support.v7.widget.CardView>

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="#43FFFFFF"
                app:cardCornerRadius="20dp"
                android:id="@+id/cardViewemail"
                app:cardElevation="1dp"
                app:strokeColor="@android:color/white"

                app:strokeWidth="2dp">
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:editable="false"
                    android:inputType="none"
                    android:drawableLeft="@drawable/ic_person_white_24dp"
                    android:backgroundTint="@android:color/transparent"/>


                <EditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#25292C"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:padding="11.5dp"
                    android:textColorHint="@android:color/white"
                    android:textSize="18dp" />
            </android.support.design.card.MaterialCardView><android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#43FFFFFF"
            app:cardCornerRadius="20dp"
            android:id="@+id/cardView"
            app:cardElevation="1dp"
            app:strokeColor="@android:color/white"

            app:strokeWidth="2dp">


            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:focusable="false"
                android:clickable="false"
                android:editable="false"
                android:inputType="none"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:backgroundTint="@android:color/transparent"/>


            <com.ujjwalsingh.whatsappclone.LockEditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#25292C"
                android:id="@+id/password"
                android:hint="Password"
                android:padding="11.5dp"
                android:textColorHint="@android:color/white"
                android:textSize="18dp" />
        </android.support.design.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-4dp"
            android:orientation="vertical">
            <android.support.design.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:background="#CEFFFFFF"
                    android:padding="5dp"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:id="@+id/button_register"
                    android:textColor="#21274A"
                    android:textSize="23dp"
                    />
            </android.support.design.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>